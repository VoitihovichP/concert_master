{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "Configs/*": ["./src/configs/*"],
      "Components/*": ["./src/components/*"],
      "Modules/*": ["./src/modules/*"],
      "Pages/*": ["./src/pages/*"],
      "Ui/*": ["./src/ui/*"],
      "Styles/*": ["./src/configs/styles/*"],
      "Models/*": ["./src/models/*"],
      "Helpers/*": ["./src/helpers/*"],
    }
  }
}
